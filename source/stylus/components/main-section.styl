.main-section
  background-color #095E09
  // background-image: url('../images/main-section-bg.jpg')
  // background-repeat: no-repeat
  // background-size: cover
  // background-position: center

  &__container
    position relative
    z-index 1
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 30px 0 50px 0
    +above($breakpoints.md)
      padding 35px 0 80px 0
    +above($breakpoints.xxl)
      padding 44px 0 111px 0

  &__title,
  &__sub-title,
  &__text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 20px 0 15px 0
    +above($breakpoints.sm)
      padding 50px 0 20px 0
    +above($breakpoints.md)
      padding 90px 0 30px 0
    +above($breakpoints.xxl)
      padding 117px 0 40px 0

  &__sub-title
    position relative
    width 100%
    padding: 10px
    background-color #1B3A06
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 15px;
      width: 378px;
      padding: 20px 10px 20px 110px;
    +above($breakpoints.md)
      border-radius: 20px
      width: 471px;
      padding: 25px 10px 25px 130px;
    +above($breakpoints.xxl)
      width 573px
      height: 199px
      padding 30px 10px 32px 162px

  &__sub-title-icon
    position: absolute
    width: 75px;
    height: auto;
    top: 11px;
    left: -35px;
    +above($breakpoints.sm)
      width: 170px;
      top: -5px;
      left: -34px;
    +above($breakpoints.md)
      width: 200px;
      top: -7px;
      left: -38px;
    +above($breakpoints.xxl)
      width: 261px;
      top: -12px;
      left: -53px;

  &__text
    padding 10px 0
    +above($breakpoints.sm)
      padding 15px 0

  &__form
    width 280px
    margin 0 auto
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 7px
      margin 0
      width 280px
    +above($breakpoints.md)
      gap: 8px
      width 360px
    +above($breakpoints.xxl)
      gap: 9px
      width 410px

  &__img
    width 250px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 440px;
      bottom: 0;
      right: -20px;
    +above($breakpoints.md)
      width 570px
      bottom: 0
      right: 0
    +above($breakpoints.xxl)
      width 721px
      bottom: -35px
      right: 10px
