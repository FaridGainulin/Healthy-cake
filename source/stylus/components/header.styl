.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    color: $color-beige

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 20px
    +above($breakpoints.md)
      gap: 40px
    +above($breakpoints.xxl)
      gap: 55px

  &__logo
    width 132px
    height: auto
    +above($breakpoints.sm)
      width 150px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 214px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block
      line-height 147% !important

  &__connection
    display: flex
    align-items: center
    gap: 5px;
    +above($breakpoints.sm)
      gap: 8px;
    +above($breakpoints.md)
      gap: 11px;
    +above($breakpoints.xxl)
      gap: 13px

  &__connection-icon
    width 14px
    height: 14px
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      width 18px
      height: 18px
    +above($breakpoints.xxl)
      width 19px
      height: 19px
