.footer
  background-color #fff

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 9px 0 8px 0

  &__logo
    width 132px
    height: auto
    +above($breakpoints.sm)
      width 130px
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 180px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      align-items: center
      text-align: center
      gap: 5px
      color: #000
    +above($breakpoints.md)
      gap: 6px
    +above($breakpoints.xxl)
      gap: 7px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline
    color: #000

  &__connection
    display: flex
    align-items: center
    gap: 5px;
    color: #103A21
    +above($breakpoints.sm)
      gap: 8px;
    +above($breakpoints.md)
      gap: 11px;
    +above($breakpoints.xxl)
      gap: 13px

  &__connection-icon
    width 14px
    height: 14px
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      width 18px
      height: 18px
    +above($breakpoints.xxl)
      width 19px
      height: 19px
