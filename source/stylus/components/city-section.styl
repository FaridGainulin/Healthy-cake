.city-section
  // background-image: url('../images/city-section-bg.jpg')
  // background-repeat: no-repeat
  // background-size: cover
  // background-position: center
  background-color #095E09

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 102px 0 107px 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 40px

  &__title,
  &__sub-title,
  &__bottom-text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 5px 0 10px 0
    +above($breakpoints.sm)
      padding: 23px 0 31px 0
    +above($breakpoints.md)
      padding 11px 0 35px 0
    +above($breakpoints.xxl)
      padding 11px 0 43px 0

  &__bottom
    display: flex
    align-items: center
    justify-content center
    gap: 20px
    color: #D7C0A8
    +above($breakpoints.sm)
      justify-content start
      gap: 30px
      padding-left 50px
    +above($breakpoints.md)
      gap: 40px
      padding-left 80px
    +above($breakpoints.xxl)
      gap: 65px
      padding-left 117px

  &__bottom-icon
    width 40px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 100px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 280px
    +above($breakpoints.sm)
      width 300px
      gap: 7px
    +above($breakpoints.md)
      width 360px
      gap: 8px
    +above($breakpoints.xxl)
      width 410px
      gap: 9px
      margin-bottom 7px
