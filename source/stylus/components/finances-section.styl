.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    color: #1B3A06
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 70px 0 70px 0
    +above($breakpoints.xxl)
      padding 100px 0 100px 0

  &__top-img
    position: absolute;
    width: 200px;
    height: auto;
    top: 18px;
    left: -162px;
    +above($breakpoints.sm)
      width: 447px;
      top: -122px;
      left: -321px;
    +above($breakpoints.md)
      width: 647px;
      top: -161px;
      left: -457px;
    +above($breakpoints.xxl)
      width: 947px;
      top: -248px;
      left: -723px;

  &__title,
  &__sub-title
    text-align: center

  &__title
    color: #103A21

  &__sub-title
    padding 5px 0 15px 0
    +above($breakpoints.sm)
      padding 12px 0 30px 0
    +above($breakpoints.md)
      padding 12px 0 40px 0
    +above($breakpoints.xxl)
      padding 12px 0 60px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 88px
    background-color #fff
    border-radius: 10px
    border: 1px solid #095E09
    padding 15px 10px 
    box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.25);
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      border-radius: 15px
      width 235px !important
      height: 94px
      padding 10px 10px 10px 15px
    +above($breakpoints.md)
      border-radius: 20px
      width 308px !important
      height: 120px
      padding 15px 10px 15px 20px
    +above($breakpoints.xxl)
      width 380px !important
      height: 151px
      padding 20px 10px 15px 24px

  &__card-title
    padding 7px 0 2px
    text-transform: uppercase
    +above($breakpoints.sm)
      text-transform: none
      padding 5px 0 3px
    +above($breakpoints.md)
      padding 7px 0 2px
    +above($breakpoints.xxl)
      padding 12px 0 5px

  &__card-icon
    width 18px
    height: 18px
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      width 24px
      height: 24px
    +above($breakpoints.md)
      width 28px
      height: 28px
    +above($breakpoints.xxl)
      width 33px
      height: 33px

  &__img-mobile
    width 280px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      display: none

  &__img-1,
  &__img-2,
  &__img-3
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 235px
      height: auto
      border-radius: 15px
    +above($breakpoints.md)
      border-radius: 20px
      width 308px
    +above($breakpoints.xxl)
      width 380px

  &__img-1
    +above($breakpoints.sm)
      top: 137px
      left: 0
    +above($breakpoints.md)
      top: 210px
    +above($breakpoints.xxl)
      top: 275px

  &__img-2
    +above($breakpoints.sm)
      top: 137px
      right: 0
    +above($breakpoints.md)
      top: 210px
    +above($breakpoints.xxl)
      top: 275px

  &__img-3
    +above($breakpoints.sm)
      top: 344px
      left: 50%
      transform: translateX(-50%)
    +above($breakpoints.md)
      top: 490px
    +above($breakpoints.xxl)
      top: 617px

  &__card-margin-1
    +above($breakpoints.sm)
      margin-left 245px
      margin-right 245px
    +above($breakpoints.md)
      margin-left 328px
      margin-right 328px
    +above($breakpoints.xxl)
      margin-left 400px
      margin-right 400px

  &__card-margin-2
    +above($breakpoints.sm)
      margin-left 245px
    +above($breakpoints.md)
      margin-left 328px
    +above($breakpoints.xxl)
      margin-left 400px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    margin-top 15px
    +above($breakpoints.sm)
      margin-top 20px
      flex-direction: row
      justify-content flex-end
      text-align: end
      gap: 15px
    +above($breakpoints.md)
      margin-top 25px
      gap: 20px
    +above($breakpoints.xxl)
      margin-top 32px

  &__bottom-text
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      align-items: flex-end
      gap: 5px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 12px

  &__bottom-text-1
    line-height 137% !important
  &__bottom-text-2
    line-height 100% !important

  &__bottom-img
    width 280px
    height: auto
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 15px
      width 235px
    +above($breakpoints.md)
      border-radius: 20px
      width 308px
    +above($breakpoints.xxl)
      width 380px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 280px
    +above($breakpoints.sm)
      width 235px
      gap: 5px
    +above($breakpoints.md)
      width 308px
      gap: 5px
    +above($breakpoints.xxl)
      width 380px
      gap: 9px
