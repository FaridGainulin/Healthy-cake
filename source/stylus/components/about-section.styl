.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 40px 0
    +above($breakpoints.md)
      padding 80px 0 60px 0
    +above($breakpoints.xxl)
      padding 100px 0 85px 0

  &__title
    color: #1B3A06
    text-align: center
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 60px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position: relative;
    width: 280px !important;
    height: 80px;
    border-radius: 10px;
    background-color: #1b3a06;
    padding: 15px 55px 15px 5px;
    text-align: center;
    +above($breakpoints.sm)
      text-align: start;
      padding: 20px 10px 15px 20px;
      border-radius: 15px;
      width: 328px !important;
      height: 140px;
    +above($breakpoints.md)
      padding: 23px 10px 20px 30px;
      border-radius: 20px;
      width: 428px !important;
      height: 190px;
    +above($breakpoints.xxl)
      padding 25px 10px 24px 38px
      width 528px !important
      height: 224px

  &__card-icon
    position: absolute
    width: 40px;
    height: auto;
    top: 10px;
    right: 10px;
    +above($breakpoints.sm)
      width: 70px;
      top: 15px;
      right: 37px;
    +above($breakpoints.md)
      width: 90px;
      top: 23px;
      right: 48px;
    +above($breakpoints.xxl)
      width 111px
      top: 25px
      right: 73px

  &__text
    text-align: center
    color: #1B3A06
    +above($breakpoints.sm)
      padding-top 20px
    +above($breakpoints.md)
      padding-top 30px
    +above($breakpoints.xxl)
      padding-top 40px
