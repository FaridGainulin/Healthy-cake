.details-section
  // background-image: url('../images/details-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 100px 0 105px 0

  &__title
    color: #1B3A06
    text-align: center
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 50px
    +above($breakpoints.md)
      padding-bottom 80px
    +above($breakpoints.xxl)
      padding-bottom 105px

  &__cards-wrapper
    position relative
    z-index 1
    &:after
      content: "";
      position: absolute;
      z-index: -1;
      background-color: #095e09;
      width: 200vw;
      left: -100vw;
      height: 113px;
      top: -10px;
      +above($breakpoints.sm)
        top: -20px;
        height: 300px;
      +above($breakpoints.md)
        top: -34px
        height: 402px
      +above($breakpoints.xxl)
        height: 502px
        top: -45px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 20px 30px
    +above($breakpoints.md)
      gap: 30px 50px
    +above($breakpoints.xxl)
      gap: 47px 161px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      width 340px !important
      align-items: flex-start
      gap: 15px
    +above($breakpoints.md)
      width 400px !important
      gap: 20px
    +above($breakpoints.xxl)
      width 447px !important
      gap: 33px

  &__card-title
    background-color: #e70c38;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2px 10px 0 10px;
    line-height: 100% !important;
    height: 22px;
    +above($breakpoints.sm)
      margin-left: 10px;
      padding: 4px 10px 0 10px;
      height: 28px;
    +above($breakpoints.md)
      margin-left: 15px;
      padding: 6px 15px 0 15px;
      height: 34px;
    +above($breakpoints.xxl)
      margin-left 19px
      padding 5px 20px 0 20px
      height: 37px

  &__card-text
    line-height 125% !important

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    color: #103A21
    text-align: center
    +above($breakpoints.sm)
      text-align: end
      margin-top 40px
      flex-direction: row
      justify-content flex-end
      gap: 15px
    +above($breakpoints.md)
      margin-top 70px
      gap: 20px
    +above($breakpoints.xxl)
      margin-top 90px
      gap: 23px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__form-column
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 280px
    +above($breakpoints.sm)
      width 250px
      gap: 7px
    +above($breakpoints.md)
      width 330px
      gap: 8px
    +above($breakpoints.xxl)
      width 380px
      gap: 9px

  &__img
    position: absolute;
    z-index: 1;
    width: 260px;
    height: auto;
    top: -67px;
    right: -179px;
    +above($breakpoints.sm)
      width: 500px;
      top: -134px;
      right: -314px;
    +above($breakpoints.md)
      width: 700px;
      top: -186px;
      right: -494px;
    +above($breakpoints.xxl)
      width 1110px
      top: -291px
      right: -780px
